/*******
Typsnitt
*******/
@import url(http://fonts.googleapis.com/css?family=Judson:400,700);
@import url(http://openfontlibrary.org/face/freeuniversal);


/******
General
******/

body {
	background
	
/*	background-image: url(http://new.karen.hh.se/files/2015/10/office_l.png);*/
	background-attachment: fixed;
	font-family: 'FreeUniversalRegular', sans-serif;
	font-size: 0.9em;
}

h1, h2, h3, h4, h5 {
font-family: 'FreeUniversalRegular', sans-serif;
}

h2 {
text-transform: none;
font-weight: bold;
}

#container {
	width: 100%;
	max-width: 1200px;
	box-shadow: none;
/*	box-shadow: 0 0 10px #474747;
	-webkit-box-sizing : border-box; 
	-moz-box-sizing : border-box; 
	-o-box-sizing : border-box; 
	box-sizing : border-box;*/ 
	border-top: 4px solid #825E9E;
	padding: 0;
}

#content div a {
	color: #E58E19;
}

#content div a:hover {
	color: #825E9E;
	text-decoration: none;
}

body.page .entry-title, .not-found .entry-title {
	font-family: 'FreeUniversalRegular', sans-serif;
	font-weight: bold;
	font-size: 2em;
}

#inner-header {
	background: url(http://new.karen.hh.se/files/2015/10/header2.png);
	overflow: hidden;
}

#site-logo {
	margin-left: 20px;
}

/*Menu*/

nav[role=navigation] .menu ul {
	margin-right: auto;
	margin-left: auto;
	width: 65%;
}

nav[role=navigation] .menu ul li a, 
			nav[role=navigation] .menu #menu-icon { 
				font-family: "FreeUniversalRegular", sans-serif;
				font-size: 1.05em;
				text-transform: none;
			}

nav[role=navigation] .menu ul li a:hover {
					color: #E58E19;
				}

div.menu ul li.current-menu-item a, 
		div.menu ul li.current_page_item a,
		div.menu ul li.current-menu-ancestor a { 
			color:#E58E19;
		}

		nav[role=navigation] .menu ul li ul li a:hover { 
					color: #E58E19; 
				}

		nav[role=navigation] .menu ul li.current-menu-item a, 
		.nav ul li.current_page_item a, 
		nav[role=navigation] .menu ul li.current_page_item a {
			color: #E58E19;
		}
		
			nav[role=navigation] .menu ul.sub-menu li.current-menu-item a{
				color:#E58E19;
			} 

			.nav ul.sub-menu li.current_page_item a,
			nav[role=navigation] .menu ul.sub-menu li.current_page_item a,
			nav[role=navigation] .menu ul  li.current-page-parent ul.sub-menu li a,
			nav[role=navigation] .menu ul  li.current-menu-item ul.sub-menu li a,
			nav[role=navigation] .menu ul  li.current_page_parent ul.children li a,
			nav[role=navigation] .menu ul  li.current_page_item ul.children li a, 
			.nav ul li.current_page_item ul.sub-menu li a, 
			nav[role=navigation] .menu ul li.current_page_item ul.sub-menu li a {
				background: #fff;
			}
				
				nav[role=navigation] .menu ul.sub-menu li.current-menu-item a:hover, 
				.nav ul.sub-menu li.current_page_item a:hover, 
				nav[role=navigation] .menu ul.sub-menu li.current_page_item a:hover,
				nav[role=navigation] .menu ul li.current-page-parent ul.sub-menu li a:hover,
				nav[role=navigation] .menu ul li.current-menu-item ul.sub-menu li a:hover,
				nav[role=navigation] .menu ul li.current_page_parent ul.children li a:hover,
				nav[role=navigation] .menu ul li.current_page_item ul.children li a:hover,  
				.nav ul li.current_page_item ul.sub-menu li a:hover, 
				nav[role=navigation] .menu ul li.current_page_item ul.sub-menu li a:hover {
					background: #f5f5f5;
					color: #E58E19;
				}

nav[role=navigation] .menu ul li ul.sub-menu li a, 
		nav[role=navigation] .menu ul li ul.children li a {
			font-size: 0.9em;
		}
/******
Footer
******/
#sidebar {
	border-top: 4px solid #825E9E; /*Färgad linje ovanpå footer*/
	margin-left: 0;
	margin-right: 0;
	padding: 0;
	text-shadow: none;
}

footer[role=contentinfo] {
	margin-right: 0;
	margin-left: 0;
}

/*******
end footer
********/

.grnbar {
	background-color: #F1D6E7;
	height:4px; /*Färgad linje i start och slut på post*/
}

p.logged-in-as a {
	color: #825E9E; /*Inloggad användare*/
}

#respond #submit {
	background-color: #825E9E; /*Submit knapp*/
}

#search-icon {
	background-color: #825e9e;
	box-shadow: -2px 2px 2px #474747;
	margin-right: 10px;
}

#social-media a.social-in, #social-media a.social-fb {
	background-color: #825e9e;
	box-shadow: -2px 2px 2px #474747;
	margin-right: 10px;
}

#search-box-wrap {
	width: 100%;
	margin:0px;
	background-color: #825E9E;
}

#site-generator a {
	color: #E58E19; /*Länkar i footer för tema*/
}

/*
Slideshow
*/

#slide-wrap {
		margin-top: 15px;
}

.cycle-pager span.cycle-pager-active { color: #825E9E;}

#sliderprev,
#slidernext {
	text-align: center;
	position: absolute;
	top: 34%;
	display: none;
	text-decoration: none;
	background-color: #2b2b2b;
	font-size: 20px;
	width: 67px;
	height: 67px;
	line-height: 67px;
	z-index: 100;
	color: #E58E19;
}

#sliderprev {
	left: 30px;
}
	
#slidernext {
		right: 30px;
}

.slides .slide-content {
	background: url(http://new.karen.hh.se/files/2015/10/trans_copy.png);
}
.slides .slide-title {
	font-family: "FreeUniversalRegular", sans-serif;
	text-transform: none;

}

.colortxt {
	color: #444;
	font-family: "FreeUniversalRegular", sans-serif;

}

#content .go-button a, a:visited { /*Formattering för de små boxarna med pilar på nyhetssidan*/
background-color: #e58e19;
	color: #191919;
}

.entry-title { /*Formattering för titel boxarna på Nyhetssidan*/
	font-size: 1.5em;
	font-family: "FreeUniversalRegular", sans-serif;
	text-transform: none;
}

article[id*=post-].post-box .entry-content {
	font-size: 0.9em; /*Formattering i boxarna på Nyhetssidan*/
}

#main {
	padding-right: 20px;
	padding-left: 20px;
}

#main .news {
	background-color: #a2a2a2;
	height:auto;
	min-height: 200px;
}

/***************
Main widget area
***************/

#main .main-widget {
	float: left;
	width: 70%;
	min-height: 100px;
	min-width: 300px;
}

.widget-box {
	width: 175px;
	height: 175px;
	float: left;
	margin-right: 1%;
	margin-left: 1%;
	margin-top: 20px;
/*	overflow: hidden;*/
}

.widget-box p {
font-size: 15px;
}

.widget-box img {
	width:175px;
	height:175px;
}


/****************
Right widget area
****************/


#main .right-widget {
